generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Models

model User {
  id         String     @id @default(uuid())
  email      String     @unique
  full_name  String
  password   String
  status     UserStatus @default(PENDING)
  created_at DateTime   @default(now())
  image      String?

  role                 Role
  stock_movements      StockMovement[]
  sales                Sale[]
  stock_adjustments    StockAdjustment[]
  userActivationTokens UserActivationToken[]
  resetPasswordTokens  ResetPasswordToken[]

  @@map("users")
}

model Customer {
  id         String   @id @default(uuid())
  full_name  String
  phone      String   @unique
  email      String?
  address    String?
  created_at DateTime @default(now())

  sales Sale[]

  @@map("customers")
}

model Product {
  id            String       @id @default(uuid())
  name          String
  sku           String       @unique
  category      Category
  description   String?
  unit_price    Decimal      @default(0.00) @db.Decimal(10, 2)
  unit          String
  tracking_type TrackingType
  reorder_level Int          @default(0)
  is_active     Boolean      @default(true)

  stock_movements StockMovement[]
  sale_items      SaleItem[]
  vehicles        Vehicle[]

  @@map("products")
}

model Vehicle {
  id                    String        @id @default(uuid())
  product_id            String
  inventory_location_id String
  vin                   String        @unique
  status                VehicleStatus
  created_at            DateTime      @default(now())

  product            Product           @relation(fields: [product_id], references: [id])
  inventory_location InventoryLocation @relation(fields: [inventory_location_id], references: [id])
  stock_movement     StockMovement[]

  @@map("vehicles")
}

model InventoryLocation {
  id         String  @id @default(uuid())
  name       String
  department String
  is_active  Boolean @default(true)

  stock_movements StockMovement[]
  vehicles        Vehicle[]

  @@map("inventory_locations")
}

model StockMovement {
  id             String              @id @default(uuid())
  product_id     String
  location_id    String
  vehicle_id     String?
  quantity       Int
  reason         StockMovementReason
  reference_type ReferenceType?
  reference_id   String?
  performed_by   String
  created_at     DateTime            @default(now())

  product  Product           @relation(fields: [product_id], references: [id])
  vehicle  Vehicle?          @relation(fields: [vehicle_id], references: [id])
  location InventoryLocation @relation(fields: [location_id], references: [id])
  user     User              @relation(fields: [performed_by], references: [id])

  @@map("stock_movements")
}

model Sale {
  id          String     @id @default(uuid())
  sale_number String     @unique
  customer_id String
  created_by  String
  status      SaleStatus
  created_at  DateTime   @default(now())

  customer   Customer   @relation(fields: [customer_id], references: [id])
  user       User       @relation(fields: [created_by], references: [id])
  sale_items SaleItem[]

  @@map("sales")
}

model SaleItem {
  id         String  @id @default(uuid())
  sale_id    String
  product_id String
  quantity   Int
  unit_price Decimal @db.Decimal(10, 2)

  sale    Sale    @relation(fields: [sale_id], references: [id])
  product Product @relation(fields: [product_id], references: [id])

  @@map("sale_items")
}

model StockAdjustment {
  id         String                @id @default(uuid())
  reason     StockAdjustmentReason
  notes      String?
  created_by String
  created_at DateTime              @default(now())

  user User @relation(fields: [created_by], references: [id])

  @@map("stock_adjustments")
}

model UserActivationToken {
  id         String   @id @default(uuid())
  user_id    String
  token      String   @unique
  expired_at DateTime @default(now())
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@map("user_activation_tokens")
}

model ResetPasswordToken {
  id         String   @id @default(uuid())
  user_id    String
  token      String   @unique
  expired_at DateTime @default(now())
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@map("reset_password_tokens")
}

// Enums
enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum TrackingType {
  SERIAL
  BATCH
}

enum Category {
  HEAVY_DUTY @map("heavy_duty")
  FERTILIZER @map("fertilizer")
  PARTS      @map("parts")
  TRUCK_HEAD @map("truck_head")
  TIPPER     @map("tipper")
  TRACTOR    @map("tractor")
}

enum VehicleStatus {
  AVAILABLE
  SOLD
  DAMAGED
}

enum StockMovementReason {
  PURCHASE
  SALE
  DAMAGE
  ADJUSTMENT
}

enum ReferenceType {
  SALE
  PURCHASE
  ADJUSTMENT
}

enum SaleStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum StockAdjustmentReason {
  DAMAGE
  LOSS
  COUNT_CORRECTION
}

enum Department {
  FERTILIZER
  PLASTIC
}
